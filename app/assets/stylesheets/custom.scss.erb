@import "bootstrap";
@import "flag-icon";

body {
  font-size: .9rem;
}

/*
 * Sidebar
 */

.sidebar {
  /*position: fixed;
  top: 64px;*/
  bottom: 0;
  left: 0;
  z-index: 100; /* Behind the navbar */
  padding: 48px 0 0; /* Height of navbar */
  box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
}

.sidebar-sticky {
  position: relative;
  top: 0;
  height: calc(100vh - 48px);
  padding-top: .5rem;
  overflow-x: hidden;
  overflow-y: auto; /* Scrollable contents if viewport is shorter than content. */
}

@supports ((position: -webkit-sticky) or (position: sticky)) {
  .sidebar-sticky {
    position: -webkit-sticky;
    position: sticky;
  }
}

.sidebar .nav-link {
  font-weight: 500;
  color: #333;
}

.sidebar .nav-link .feather {
  margin-right: 4px;
  color: #999;
}

.sidebar .nav-link.active {
  color: #007bff;
}

.sidebar .nav-link:hover .feather,
.sidebar .nav-link.active .feather {
  color: inherit;
}

.sidebar-heading {
  font-size: .75rem;
  text-transform: uppercase;
}

/*
* Content
*/

[role="main"] {
  padding-top: 58px; /* Space for fixed navbar */
}

/*
* Navbar
*/

.navbar {
  margin-bottom: 1rem; /* Space after navbar */
}

.navbar-brand {
  padding-top: .75rem;
  padding-bottom: .75rem;
  font-size: 1rem;
  background-color: bg-light; /*rgba(0, 0, 0, .25);*/
  box-shadow: inset -1px 0 0 bg-light; /*rgba(0, 0, 0, .25);*/
}

/*
 * Utilities
 */

.border-top { border-top: 1px solid #e5e5e5; }
.border-bottom { border-bottom: 1px solid #e5e5e5; }

/*
 * Personal
 */

.accordion .card .card-header h5 a:not(.collapsed) .rotate-icon {
    -webkit-transform: rotate(180deg);
    -ms-transform: rotate(180deg);
    transform: rotate(180deg);
}

@media (min-width: 768px) {
  .collapse.dont-collapse-sm {
    display: block;
    height: auto !important;
    visibility: visible;
  }
}

@include media-breakpoint-down(sm) {
  h1 {
    font-size: 1.75rem;
  }
}

.price_amount, .price_duration, .price_season {
  padding: 0.375rem 0.4rem;
  font-size: 0.8rem;
}
.price_col {
  padding-right: 1px;
  font-size: 0.8rem;
}

.unavailable {
  text-color: grey
}

/*
 * Timeline
 */

.timeline {
  font-size: 0;
  border: 1px solid black;
  white-space: nowrap;
}

.timeline_top_container {
  width: calc(100% - 80px);
  border: 0px;
  overflow-x: hidden;
  font-size: 0;
  margin-left: 79px;
  border-bottom: 1px solid black;
  border-left: 1px solid black;
 }

.timeline_left_container {
  display: inline-block;
  width: 80px;
  height: 600px;
  border: 0px;
  overflow-y: hidden;
  font-size: 0;
  border-right: 1px solid black;

}

.house_code {
  width: 80px;
  height: 30px;
  font-size: initial;
}

.timeline_container {
  position: relative;
  display: inline-block;
  width: calc(100% - 80px);
  height: 600px;
  border: 0px;
  overflow: auto;
  white-space: nowrap;
  font-size: 0;

}

.timeline_header {
  display: inline-block;
}

.house {
  display: inline-block;
  width: 80px;
  height: 30px;
  font-size: initial;
}

.cell, .date {
  display: inline-block;
  width: 30px;
  height: 30px;
  font-size: initial;
}

.month_date {
  display: inline-block;
}

.date {
  text-align: center;
}

.month {
  display: block;
  font-size: initial;
  text-align: center;
}

.booked {
  background-color: #28a745;
  border-right: 1px solid black;
  border-bottom: 1px solid black;
  a {
    color: #f8f9fa;
  }
}

.free {
  background-color: white;
  border-right: 1px solid black;
  border-bottom: 1px solid black;
}

.house_code {
  border-bottom: 1px solid black;
}
.month {
  border-right: 1px solid black;
  border-bottom: 1px solid black;
}

.date {
  border-right: 1px solid black;
}
