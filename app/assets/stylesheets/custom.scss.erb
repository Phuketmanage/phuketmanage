.house_main_photo_parent {
    height: 300px;
    overflow: hidden;
    cursor: pointer
}

.house_main_photo_child {
  width: 100%;
  height: 100%;
  background-color: black; /* fallback color */
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  -webkit-transition: all .5s;
  -moz-transition: all .5s;
  -o-transition: all .5s;
  transition: all .5s;
}

.house_main_photo_parent:hover .house_main_photo_child,
.house_main_photo_parent:focus .house_main_photo_child {
  -ms-transform: scale(1.1);
  -moz-transform: scale(1.1);
  -webkit-transform: scale(1.1);
  -o-transform: scale(1.1);
  transform: scale(1.1);
}

span.gallery_text {
    display: none;
    font-size: 35px;
    color: #ffffff !important;
    font-family: sans-serif;
    text-align: center;
    margin: auto;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    height: 50px;
    cursor: pointer;
    /*text-decoration: none;*/
}

.house_main_photo_parent:hover .house_main_photo_child:before, .house_main_photo_parent:focus .house_main_photo_child:before {
    display: block;
}

.house_main_photo_parent:hover span, .house_main_photo_parent:focus span {
    display: block;
}

.house_main_photo_child::before {
    content: "";
    display: none;
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(52,73,94,0.75);
}

