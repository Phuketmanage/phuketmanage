<%= form_with model: search, url: house_path(@house.number), method: :get, local: true do |f| %>
  <% if search.errors.any? %>
    <%= render 'shared/error_messages', object: f.object %>
  <% end %>
  <div class='shadow-sm mb-2 p-2 border rounded bg-white'>
    <div class="form-row">
      <div class="col-md-4 col-lg-12 mb-1">
        <%= f.date_field :rs, min: Time.zone.now.in_time_zone('Bangkok').to_date+1.day, value: params[:rs].present? ? params[:rs] : '', class: 'form-control' %>
      </div>
      <div class="col-md-4 col-lg-12 mb-1">
        <%= f.date_field :rf, min: Time.zone.now.in_time_zone('Bangkok').to_date+7.day, value: params[:rf].present? ? params[:rf] : '', class: 'form-control' %>
      </div>
      <div class="col-md-4 col-lg-12">
        <%= f.submit defined?(btn_text) ? btn_text : t('search.search'), class: "btn btn-primary btn-block"%>
      </div>
    </div>
  </div>
<% end %>
