<%= form_with url: show_house_path(@house.number), method: :get, local: true do |f| %>
  <% if search.errors.any? %>
    <%= render 'shared/error_messages', object: f.object %>
  <% end %>
  <div class='shadow-sm mb-2 p-2 border rounded bg-white'>
    <div class="form-row">
      <div class="col-md-4 col-lg-12 mb-1">
        <%= f.text_field :period,
            autocomplete: 'off',
            readonly: true,
            class: 'form-control-plaintext border pl-2 ',
            placeholder: t('search.dates'),
            data: {
                    controller: "flatpickr",
                    flatpickr_locale: I18n.locale,
                    flatpickr_min_date: Time.now.in_time_zone('Bangkok').strftime("%d.%m.%Y"),
                    flatpickr_disable: @occupied_days
                  },
            value: params['period'] %>
      </div>
      <div class="col-md-4 col-lg-12">
        <%= f.submit defined?(btn_text) ? btn_text : t('search.search'), class: "btn btn-primary btn-block"%>
      </div>
    </div>
  </div>

<% end %>
