<%= form_with url: show_house_path(@house.number), method: :get, local: true do |f| %>
  <% if search.errors.any? %>
    <%= render 'shared/error_messages', object: f.object %>
  <% end %>
  <div class='shadow-sm mb-2 p-2 border rounded bg-white js_rangepicker'
              data-occupied-days="<%= @occupied_days %>"
              data-start="<%= params[:rs].present? ? params[:rs].to_date.strftime('%d.%m.%Y') : '' %>"
              data-finish="<%= params[:rf].present? ? params[:rf].to_date.strftime('%d.%m.%Y') : '' %>">
    <div class="form-row">
      <div class="col-md-4 col-lg-12 mb-1">
        <%= f.text_field :rs, autocomplete: 'off', readonly: true, class: 'form-control-plaintext border pl-2', placeholder: t('search.checkin') %>
      </div>
      <div class="col-md-4 col-lg-12 mb-1">
        <%= f.text_field :rf, autocomplete: 'off', readonly: true, class: 'form-control-plaintext border pl-2', placeholder: t('search.checkout') %>
      </div>
      <div class="col-md-4 col-lg-12">
        <%= f.submit defined?(btn_text) ? btn_text : t('search.search'), class: "btn btn-primary btn-block"%>
      </div>
    </div>
  </div>

<% end %>
