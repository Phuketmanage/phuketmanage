<div class="row shadow-sm mb-2 p-1 bg-light bg-white border rounded">
  <div class="col">
    <div class="row">
      <% if signed_in? %>
        <div class="col-lg-1">
        <% else %>
          <div class="col-lg-2">
          <% end %>
          <strong><%= transfer.trsf_type %></strong>
          <%= transfer.date.to_fs(:date) if !transfer.date.nil? %>
        </div>
        <div class="col-lg-2">
          <% if transfer.trsf_type == "IN" %>
            <span class="d-lg-none">Flight: </span>
          <% else %>
            <span class="d-lg-none">From: </span>
          <% end %>
          <%=  "#{transfer.from} - #{transfer.time}" %>
        </div>
        <div class="col-lg-2">
          <span class="d-lg-none">To: </span>
          <%= transfer.to %>
        </div>
        <% if signed_in? %>
          <div class="col-lg-2">
          <% else %>
            <div class="col-lg-3">
            <% end %>
            <span class="d-lg-none">Client: </span>
            <%= "#{transfer.client}, #{transfer.pax} pax" %>
          </div>
          <% if signed_in? && current_user.role?(['Admin', 'Manager', 'Guest relation']) %>
            <div class="col-lg-1">
              <span class="d-lg-none">Booked by: </span>
              <%= "#{transfer.booked_by}" if !transfer.booked_by.nil? %>
            </div>
          <% end %>
          <div class="col-lg-2 transfer_<%= transfer.status %>">
            <span class="d-lg-none">Status: </span>
            <% if transfer.sent? %>
              <%= "#{transfer.status} #{transfer.created_at.to_fs(:date)}" %>
            <% else %>
              <%= "#{transfer.status} #{transfer.updated_at.to_fs(:date)}" %>
            <% end %>
          </div>
          <div class="col-lg-1">
            <span class="d-lg-none">Number: </span>
            <% if signed_in? && current_user.role?(['Admin', 'Manager']) %>
              <%= link_to transfer.number, edit_transfer_path(transfer, request_from: controller_name), remote: :true %>
            <% else %>
              <%= transfer.number %>
            <% end %>
          </div>
          <% if signed_in? && current_user.role?(['Admin', 'Manager']) %>
            <div class="col-lg-1">
              <span class="d-lg-none">Actions: </span>
              <%= link_to 'Cancel', cancel_transfer_path(transfer, request_from: controller_name), data: { confirm: 'Are you sure?' }, remote: :true %>
              <% if current_user.role?(['Admin']) %>
                <%= link_to 'Destroy', transfer, method: :delete, request_from: controller_name, data: { confirm: 'Are you sure?' }, remote: :true %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="row">
          <div class="col">
            <% if transfer.remarks? %>
              <span class="d-lg-none">Remarks: </span>
              Remarks: <%= transfer.remarks  %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
