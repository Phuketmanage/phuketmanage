<h1>Editing Booking</h1>

<%= render 'form', booking: @booking %>

<% if !@booking.new_record? %>
  <h3>Files</h3>
  <div class="shadow-sm mb-2 p-2 bg-white border rounded">
    <%= form_with(url: booking_booking_files_path(@booking.number, @booking_file), data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host }, id: 'fileupload_booking_form', local: true) do |f| %>
      <%= hidden_field_tag 'booking_number', @booking.number %>
      <%= f.file_field :file, id: "fileupload_booking", style: 'display: none;'%>
      <div class="progress" style="height:3px; display: none;">
        <div class="progress-bar bg-info" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <div class="input-group">
        <%= f.text_field :file_name, class: "form-control", placeholder: 'File name' %>
        <div class="input-group-append">
          <button class="btn btn-success" type="button" onclick="document.getElementById('fileupload_booking').click();">Browse</button>
        </div>
      </div>
      <div class="form-group mt-2">
        <%= f.text_area :file_comment, class: "form-control", rows: 3, placeholder: 'Comment to file'  %>
      </div>
      <div class="text-right form-group">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <% @booking.files.order(:created_at).each do |f| %>
    <div class="shadow-sm mb-2 p-2 bg-white border rounded">
      File
    </div>
  <% end %>

  <h3 class="mt-3">Transfers</h3>
  <%= link_to 'Book transfer IN', '#',
                data: {
                  toggle: 'modal',
                  target: '#new_transfer_modal',
                  transfer_type: 'IN',
                },
                class: 'link_new_transfer' %> |
  <%= link_to 'Book transfer OUT', '#',
                data: {
                  toggle: 'modal',
                  target: '#new_transfer_modal',
                  transfer_type: 'OUT',
                },
                class: 'link_new_transfer' %>
  <div id="transfers">
    <%= render 'transfers/transfers', transfers: @transfers %>
  </div>
  <div id="transfer_form">
    <%= render 'transfers/form',  transfer: @transfer %>
  </div>
<% end %>

