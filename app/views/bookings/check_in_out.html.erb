<h1>Check in/out</h1>

<div class="d-none d-lg-block mb-2 p-2 ">
  <div class="row font-weight-bold">
    <div class="col-lg-1">
      Date
    </div>
    <div class="col-lg-1">
      Type
    </div>
    <div class="col-lg-1">
      House
    </div>
    <div class="col-lg-4">
      Client
    </div>
    <div class="col-lg-2">
      Our transfer
    </div>
    <div class="col-lg-3">
      Comment
    </div>
  </div>
</div>
<% date = '' %>
<% @result.each do |r| %>
  <%#= "#{date} != #{r[:date]}"  %>
  <% if date != r[:date] %>
    <% gutter = 'mt-3' %>
    <% date = r[:date] %>
  <% end %>

  <div class="row shadow-sm mb-2 p-1 bg-light rounded <%= gutter %>">
    <div class="col-lg-1">
      <span class="d-lg-none">Date: </span>
      <%=  r[:date] %>
    </div>
    <div class="col-lg-1">
      <span class="d-lg-none">Type: </span>
      <%=  r[:type] %>
    </div>
    <div class="col-lg-1">
      <span class="d-lg-none">House: </span>
      <%=  r[:house] %>
    </div>
    <div class="col-lg-4">
      <span class="d-lg-none">Client: </span>
      <%=  r[:client] %>
    </div>
    <div class="col-lg-2">
      <span class="d-lg-none">Our transfer: </span>
      <% r[:transfers].each do |t| %>
        <%= t %><br />
      <% end %>
    </div>
    <div class="col-lg-3">
      <span class="d-lg-none">Comment: </span>
      <%=  r[:comment] %>
    </div>
  </div>
<% end %>
