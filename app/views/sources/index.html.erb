<h1>Sources</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Syncable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sources.each do |source| %>
      <tr>
        <td><%= source.name %></td>
        <td><%= 'Yes ' if source.syncable? %></td>
        <td>
        <%= link_to 'Edit', edit_source_path(source) %>
        | <%= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Source', new_source_path %>
