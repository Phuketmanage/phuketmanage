<h1>Prices</h1>

<table>
  <thead>
    <tr>
      <th>House</th>
      <th>Duration</th>
      <th>Season</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <% duration = Duration.find(price.duration_id) %>
      <% season = Season.find(price.season_id) %>
      <tr>
        <td><%= price.house_id %></td>
        <td><%= "#{duration.start} - #{duration.finish}" %></td>
        <td><%= "#{season.ssd}.#{season.ssm} - #{season.sfd}.#{season.sfm}" %></td>
        <td><%= price.amount %></td>
        <td></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Price', new_house_price_path %>
