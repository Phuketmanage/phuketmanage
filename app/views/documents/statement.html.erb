<div class="d-print-none" id='statement_form'>
  <%= form_with do |form| %>
    <%= form.hidden_field :code, value: code(@owner), id: 'document_code' %>
    <%= form.hidden_field :code, value: @usd, id: 'document_usd' %>
    <div class="field">
      <%= form.label :date %>
      <%= form.date_field :date, max: Time.zone.now.in_time_zone('Bangkok').to_date, id: 'document_date' %>
    </div>
    <div class="field">
      <%= form.label :run_number %>
      <%= form.number_field :run_number, id: 'run_number', value: 1 %>
    </div>
    <div class="field">
      <%= form.label :run_number_add %>
      <%= form.text_field :run_number_add, id: 'run_number_add' %>
    </div>
    <div class="field">
      <%= form.label :amount %>
      <%= form.text_field :amount, id: 'document_amount' %>
    </div>
    <div class="field">
      <%= form.label :customer %>
      <%= form.text_field :customer, id: 'document_customer' %>
    </div>
    <div class="field">
      <%= form.label :address %>
      <%= form.text_field :address, id: 'document_address' %>
    </div>
    <div class="field">
      <%= form.label :add_text %>
      <%= form.text_field :add_text, id: 'document_add_text' %>
    </div>
  <% end %>
</div>

<div class="p-2 bg-white">
