<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Job type</th>
      <th>Booking</th>
      <th>House</th>
      <th>Date</th>
      <th>Time</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.job_type_id %></td>
        <td><%= job.booking_id %></td>
        <td><%= job.house_id %></td>
        <td><%= job.date %></td>
        <td><%= job.time %></td>
        <td><%= job.comment %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

