<h1>Jobs</h1>
<%= form_with(url: jobs_path, method: :get) do |form|%>
  <%= form.collection_check_boxes :employee_ids, EmplType.all, :id, :name do |et| %>
      <div class="form-check form-check-inline">
        <%= et.check_box(class: "form-check-input") %>
        <%= et.label(class: "form-check-label" ) %>
      </div>
  <% end %>
<% end %>
<h1>Todos</h1>
<div id='jobs'>
  <% if current_user.role? :maid %>
    <% date = "" %>
    <% @jobs.each do |job| %>
      <% if date != job.plan %>
        <strong><%= job.plan %></strong>
        <% date = job.plan %>
      <% end %>
      <%= render 'job_maid', job: job %>
    <% end %>
  <% else %>
    <%= link_to 'New Job', new_job_path %> |
    <% if params[:closed].present? %>
      <%= link_to 'Opened Jobs', jobs_path() %>
    <% else %>
      <%= link_to 'Closed Jobs', jobs_path(closed: 1) %>
    <% end %>
    <% @jobs.each do |job| %>
      <%= render 'job_managers', job: job %>
    <% end %>

  <% end %>
</div>

