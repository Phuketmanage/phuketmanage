<div class="row shadow-sm mb-2 p-2 bg-light rounded" id="job_<%= job.id %>">
  <div class="col">
    <div class="row">
      <div class="col">
        <div class="d-md-inline-block"><%= "Created: #{job.created_at.strftime('%d.%m.%Y')}" %></div>
        <div class="d-md-inline-block"><%= "| Plan: #{job.plan.strftime('%d.%m.%Y')} #{job.time}" if job.plan %></div>
        <div class="d-md-inline-block"><%= "| Closed: #{job.closed.strftime('%d.%m.%Y')} |" if job.closed %></div>
        <% if current_user.role? :admin %>
          <div class="d-md-inline-block"><%= "For: #{job.user.name}" if job.user_id %></div>
        <% end %>

          <div class="d-md-inline-block">
            <% if (job.creator == current_user) || current_user.role?(:admin) %>
              <%= link_to 'Edit', edit_job_path(job) %> |
            <% end %>
            <% if (job.creator == current_user) || current_user.role?(:admin) %>
              <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %> |
            <% end %>
            <%= link_to 'Mark as done', job_path(job, mark_as_done: true), method: :put, remote: true %>
          </div>
      </div>
    </div>
    <% if current_user.role? :admin %>
    <div class="row">
      <div class="col">
        <%= form_with(model: job, class: "update_job") do |f| %>
          <div class="form-row">
            <div class="col-md-6 from-group">
              <%= f.label :job %>
              <%= f.text_area :job, class: 'form-control', row: 2,
                data: {job_id: job.id, field: 'job'} %>
            </div>
            <div class="col-md-6 from-group">
              <%= f.label :comment %>
              <%= f.text_area :comment, class: 'form-control', row: 2,
                data: {job_id: job.id, field: 'comment'} %>
            </div>
          </div>
          <%= f.submit 'Save', {  class: "btn btn-primary mt-2",
                                  id: "btn_job_#{job.id}",
                                  style: "display: none;"} %>
        <% end %>
      </div>
    </div>
    <% else %>
      Job: <%= job.job %>
      <div class="mt-2">
        <%= form_with(model: job, class: "update_job") do |f| %>
          <%= f.text_area :comment, class: 'form-control', row: 2,
            data: {job_id: job.id, field: 'comment'} %>
          <%= f.submit 'Save', {  class: "btn btn-primary mt-2",
                                  id: "btn_job_#{job.id}",
                                  style: "display: none;"} %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
