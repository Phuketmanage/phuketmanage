<h1>Locations</h1>

<%= link_to 'New Location', new_location_path, class: "btn btn-primary" %>

<table class='table table-striped table-bordered table-sm bg-white table-responsive-lg mt-2'>
  <thead>
    <tr>
      <th>Name en</th>
      <th>Name ru</th>
      <th>Descr en</th>
      <th>Descr ru</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name_en %></td>
        <td><%= location.name_ru %></td>
        <td><%= location.descr_en %></td>
        <td><%= location.descr_ru %></td>
        <td>
          <%= link_to 'Show', location %> |
          <%= link_to 'Edit', edit_location_path(location) %> |
          <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

