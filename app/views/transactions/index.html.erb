<h1>Transactions</h1>

<div class="mb-2">
  <%= form_with(url: transactions_path, method: :get, local: true) do |form| %>
    <div class="form-row">
      <div class="col-md-2">
        <%= form.select :user_id,
              User.with_role(['Owner']).map {|u| [u.name, u.id]},
              { include_blank: 'Select owner', selected: params[:user_id] },
              class: "form-control" %>
      </div>
      <div class="col-md-2">
        <%= form.submit 'Show', class: "btn btn-primary" %>
      </div>

    </div>
  <% end %>
</div>

<table class='table'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Debit</th>
      <th>Credit</th>
      <th>Balance</th>
      <th>Type</th>
      <th>House</th>
      <th>Comment</th>
      <th>Comment inner</th>
      <th colspan="3"></th>
      <% if !@owner %>
        <th>Debit</th>
        <th>Credit</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |t| %>
      <tr>
        <td><%= t.date.strftime('%d.%m.%Y') %></td>
        <% if @owner %>
          <% debit = t.balance_outs.sum(:debit) %>
          <% credit = t.balance_outs.sum(:credit) %>
          <td><%= debit - credit if debit > 0%></td>
          <td><%= credit if credit > 0 %></td>
        <% else %>
          <% debit = t.balances.sum(:debit) %>
          <% credit = t.balances.sum(:credit) %>
          <td><%= debit if debit > 0 %></td>
          <td><%= credit if credit > 0 %></td>
        <% end %>
        <td>balance</td>
        <td><%= t.type.name_en %></td>
        <td><%= t.house.code if t.house %></td>
        <td><%= t.comment_en %></td>
        <td><%= t.comment_inner %></td>
        <td><%= link_to 'Show', t %></td>
        <td><%= link_to 'Edit', edit_transaction_path(t) %></td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if !@owner %>
          <% debit = t.balance_outs.sum(:debit) %>
          <% credit = t.balance_outs.sum(:credit) %>
          <td><%= debit - credit if debit > 0%></td>
          <td><%= credit if credit > 0 %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

