<p id="notice"><%= notice %></p>

<h1>Settings</h1>

<table class='table table-striped table-bordered table-sm bg-white table-responsive-lg'>
  <thead>
    <tr>
      <th>Var</th>
      <th>Value</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.var %></td>
        <td><%= setting.value %></td>
        <td><%= setting.description %></td>
        <td><%= link_to 'Show', setting %>
        <%= link_to 'Edit', edit_setting_path(setting) %>
        <%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Setting', new_setting_path %>
