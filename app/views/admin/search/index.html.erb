<div data-controller="reveal" data-reveal-hidden-class="d-none">
  <h1><%= t('search.admin.header') %></h1>
  <h5><%= t('search.admin.description') %></h5>
  <%= render 'form', search: @search, bdrs: @bdrs, locations: @locations, types: @types %>
  <p><small><%= t('search.period_limits') %></small></p>
  <div class="form-row row-cols-1 row-cols-md-2">
    <div class="col">
      <label class="col form-check-label" for="checkboxHideUnavailable">
        <input class="form-check-input form-check-input-xl" type="checkbox" value="" id="checkboxHideUnavailable" data-action="click->reveal#toggle">
        <span>Hide unavailable</span>
      </label>
    </div>
    <div class="col">
      <div class="d-flex justify-content-end" data-controller="clipboard" data-clipboard-success-content-value="Copied!">
        <input hidden type="text" value="<%= generated_link_to_guests_search %>" data-clipboard-target="source" />
        <button class="col-4 btn btn-outline-info btn-sm" type="button" data-action="clipboard#copy" data-clipboard-target="button">Copy link to guest search</button>
      </div>
    </div>
  </div>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mt-2">
    <% @houses.each do |h| %>
      <% next if @prices[h.id].nil?  %>
      <%= render 'admin/admin_houses/preview', h: h, price: @prices[h.id], from_search: true, search: @search %>
    <% end %>
  </div>
</div>
