<h1>Editing Booking</h1>
<%= render 'form', booking: @booking %>
<% if !@booking.new_record? %>
  <h3>Files</h3>
  <ul id="booking_files" class='list-group'>
    <% @booking.files.order(:created_at).each do |f| %>
      <%= render 'booking_files/file', file: f %>
    <% end %>
  </ul>
  <div id="booking_file" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-body">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <div class="shadow-sm mb-2 p-2 bg-white border rounded">
    <%= form_with(model: @booking_file) do |f| %>
      <%= hidden_field_tag 'booking_number', @booking.number %>
      <%= f.file_field :file, id: "fileupload_booking", style: 'display: none;'%>
      <div class="progress" style="height:3px; display: none;">
        <div class="progress-bar bg-info" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <div class="input-group">
        <%= f.text_field :name, class: "form-control", placeholder: 'File name', required: true %>
        <div class="input-group-append">
          <button class="btn btn-success" type="button" onclick="document.getElementById('fileupload_booking').click();">Browse</button>
        </div>
      </div>
      <div class="form-group mt-2">
        <%= f.text_area :comment, class: "form-control", rows: 3, placeholder: 'Comment to file'  %>
      </div>
      <div class="text-right form-group">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <h3 class="mt-3">Transfers</h3>
  <%= link_to 'Book transfer IN', '#',
                data: {
                  toggle: 'modal',
                  target: '#new_transfer_modal',
                  transfer_type: 'IN',
                },
                class: 'link_new_transfer' %> |
  <%= link_to 'Book transfer OUT', '#',
                data: {
                  toggle: 'modal',
                  target: '#new_transfer_modal',
                  transfer_type: 'OUT',
                },
                class: 'link_new_transfer' %>
  <div id="transfers">
    <%= render 'admin/transfers/transfers', transfers: @transfers %>
  </div>
  <div id="transfer_form">
    <%= render 'admin/transfers/form',  transfer: @transfer %>
  </div>
<% end %>
