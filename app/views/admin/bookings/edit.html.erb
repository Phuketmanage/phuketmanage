<h1>Editing Booking</h1>
<%= render 'form', booking: @booking %>
<% if !@booking.new_record? %>
  <h3>Files</h3>
  <ul id="booking_files" class='list-group'>
    <%= turbo_frame_tag "booking_files" do %>
      <%= render partial: 'admin/booking_files/file',
        collection: @booking.files.by_earliest_created,
        as: :booking_file %>
    <% end %>
  </ul>
  <div id="booking_file" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-body">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <div class="shadow-sm mb-2 p-2 bg-white border rounded">
    <%= render 'admin/booking_files/form', booking_file: @booking.files.new %>
  </div>
  <h3 class="mt-3">Transfers</h3>
  <%= link_to 'Book transfer IN', '#',
                data: {
                  toggle: 'modal',
                  target: '#new_transfer_modal',
                  transfer_type: 'IN',
                },
                class: 'link_new_transfer' %> |
  <%= link_to 'Book transfer OUT', '#',
                data: {
                  toggle: 'modal',
                  target: '#new_transfer_modal',
                  transfer_type: 'OUT',
                },
                class: 'link_new_transfer' %>
  <div id="transfers">
    <%= render 'admin/transfers/transfers', transfers: @transfers %>
  </div>
  <div id="transfer_form">
    <%= render 'admin/transfers/form',  transfer: @transfer %>
  </div>
<% end %>
