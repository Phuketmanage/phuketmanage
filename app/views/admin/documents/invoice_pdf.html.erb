<div class="grid">
  <!-- Title -->
  
  <div>    
    <% if @document[:show_logo] %>
    <img src="<%= @document[:logo_path] %>" alt="Logo" style="height: 50px;">
    <% end %>
  </div>
  
  <div class="title text-right">
    INVOICE
  </div>
  
  <!-- Parties and Meta -->
  <div>
    Contractor: Maryana Kotova<br>
    Customer: <%= @document[:client].presence || content_tag(:span, "Client name missing", class: "missing")  %>
  </div>
  <div class="text-right">
    Number: <%= @document[:number] %><br>
    Date: <%= (@document[:date].to_date).strftime("%d.%m.%Y") %>
  </div>
</div>

<!-- Invoice Body -->
<table class="table">
  <thead>
    <tr>
      <th class="text-left">Description</th>
      <th style="width: 150px;" class="text-right">Amount, THB</th>
    </tr>
  </thead>
  <tbody>
    <% @document[:invoice_lines].each do |line| %>
      <% %>
      <tr>
        <td><%= simple_format(line[:description].presence || "â€”") %></td>
        <td class="text-right"><%= number_to_currency(line[:amount], unit: "", precision: 2) %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th class="text-right">Total:</th>
      <th class="text-right"><%= number_to_currency(@document[:invoice_total], unit: "", precision: 2) %></th>
    </tr>
  </tfoot>
</table>