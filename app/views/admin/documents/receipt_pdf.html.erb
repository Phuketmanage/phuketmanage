<%# app/views/admin/documents/agreement_pdf.html.erb %>

<div class="grid">
  <!-- Title -->
  <div>
    <% if Rails.env.production? %>
      <img src="<%= @document[:logo_path] %>" alt="Logo" style="height: 50px;">
    <% else %>
      <img src="<%= asset_url('mstudio_logo.png') %>" alt="Logo" style="height: 50px;">
    <% end %>
  </div>
  
  <div class="title text-right">
    RECEIPT
  </div>
  
  <!-- Parties and Meta -->
  <div>
    Contractor: Maryana Kotova<br>
    Customer: <%= @document[:client] %>
  </div>
  <div class="text-right">
    Number: <%= @document[:number] %><br>
    Date: <%= (@document[:date].to_date).strftime("%d.%m.%Y") %>
  </div>
</div>

<!-- Invoice Body -->
<table class="table">
  <thead>
    <tr>
      <th class="text-left">Description</th>
      <th style="width: 150px;">Amount, THB</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= simple_format(@document[:text].presence || "â€”") %></td>
      <td class="text-right"><%= number_to_currency(@document[:amount], unit: "", precision: 2) %></td>
    </tr>
  </tbody>
  <tfoot>
    <tr>
      <th class="text-right">Total:</th>
      <th class="text-right"><%= number_to_currency(@document[:amount], unit: "", precision: 2) %></th>
    </tr>
  </tfoot>
</table>