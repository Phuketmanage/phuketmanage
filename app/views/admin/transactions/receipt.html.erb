<div class="p-2 bg-white">
  <div class="text-right d-print-none">
    <button type="button" class="btn btn-outline-primary" onclick="window.print();">Print</button>
  </div>
  <div class="d-flex flex-row">
    <div class="p-2 mr-auto"><img src="https://phuketmanage.s3-ap-southeast-1.amazonaws.com/images/Logo-512x512.png" alt="Company logo" width='100px'></div>
    <div class="p-2 text-right"><h3>RECEIPT / TAX INVOICE</h3><h3>ใบเสร็จรับเงิน / ใบกำกับถาษี</h3></div>
  </div>
  <div class="d-flex flex-row">
    <div class="p-2 mr-auto">
      <strong>Phaethon Co., Ltd (Head Office)</strong><br />
      100/21 Moo 5 T. Cherngtalay A. Thalang Phuket 83110<br />
      Tel/Fax: 076 20 20 22<br />
      +66 87 555 81 55<br />
      Tax ID: 0835550008605
    </div>
    <div class="p-2">
      <% houses = @owner.houses %>
      <% if houses.count > 1 %>
        <% code = @owner.code %>
      <% else %>
        <% code = houses.first.code.gsub(/\//,'-') %>
      <% end %>
      <% code = @owner.code if @owner.code.present? %>
      <% date = @to.to_date %>
      <strong>Number:</strong> RE-<%= "#{code}-#{date.year}#{date.to_fs(:month)}" %>001<br />
      <strong>Date:</strong>  <%= @to.to_date.to_fs(:date) %>
    </div>
  </div>
  <div class="p-2">
    <strong>Customer</strong><br/>
    <%= "#{@owner.name} #{@owner.surname}" %><br />
    <%= @owner.houses.first.address %><br />
    <%# @owner.houses.each do |h| %>
      <%#= h.address %>
    <%# end %>
    Tax ID Card No.: 0000000000000
  </div>
  <div class="p-2">
  <table class='table table-bordered table-sm'>
    <tbody>
      <tr>
        <th width='100%'>Description</th>
        <th class="text-right" width='100px'>Amount</th>
      </tr>
      <% de_co_sum = 0 %>
      <% vat_sum = 0 %>
      <% de_co_bvat_sum = 0 %>
      <% de_co_wvat_sum = 0 %>
      <% @transactions.each do |t| %>
        <% next if t.hidden %>
        <% de_co = t.balances.sum(:debit) %>
        <% next unless de_co > 0 %>
        <% de_co_sum += de_co %>
        <% vat = de_co.to_f*7/107 %>
        <% de_co_bvat = de_co-vat %>
        <% de_co_bvat_sum += de_co_bvat %>
        <% vat_sum += vat %>
      <% end %>
      <tr>
        <td>
          IV-<%= "#{code}-#{date.year}#{date.to_fs(:month)}" %>001
        </td>
        <td class="iv_price_bvat_cell text-right">
          <%= number_to_currency(de_co_bvat_sum.round(2), precision: 2, unit: '') %>
        </td>
      </tr>
      <% 9.times do %>
        <tr>
          <td>&nbsp;</td>
          <td> </td>
        </tr>
      <% end %>
      <tfoot>
        <tr>
          <td class='text-right font-weight-bold text-right'>
            SUB TOTAL:<br />
            VAT (7%):<br />
            TOTAL:<br />
          </td>
          <td class="font-weight-bold text-right">
            <span id='de_co_bvat_sum'>
              <%= number_to_currency(de_co_bvat_sum.round(2), precision: 2, unit: '') %>
            </span>
            <br />
            <span id='vat_sum'>
              <%= number_to_currency(vat_sum.round(2), precision: 2, unit: '') %>
            </span>
            <br />
            <span id="iv_de_co_sum"><%= number_to_currency((de_co_bvat_sum+vat_sum).round(2), precision: 2, unit: '') %></span>
            </td>
        </tr>
      </tfoot>
    </tbody>
  </table>
  </div>
  <div class="d-flex flex-row align-items-end" style='height: 100px;'>
    <div class="p-2 mr-auto">

    </div>
    <div class="p-2 text-center" >
      _____________________________________<br />
      Assignment
    </div>
  </div>

</div>
