<%= form_with(model: employee, local: true) do |form| %>
  <%= render 'shared/error_messages', object: form.object %>


  <div class="field">
    <%= form.label :type %>
    <%= form.select :type_id,
          EmplType.all.map {|et| [et.name, et.id]},
                    { prompt: 'Select empl type' } %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
