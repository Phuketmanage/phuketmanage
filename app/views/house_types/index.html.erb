<p id="notice"><%= notice %></p>

<h1>House Types</h1>

<table class='table table-striped table-bordered table-sm table-responsive-lg'>
  <thead>
    <tr>
      <th>Name en</th>
      <th>Name ru</th>
      <th>Comm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @house_types.each do |house_type| %>
      <tr>
        <td><%= house_type.name_en %></td>
        <td><%= house_type.name_ru %></td>
        <td><%= house_type.comm %></td>
        <td><%= link_to 'Show', house_type %></td>
        <td><%= link_to 'Edit', edit_house_type_path(house_type) %></td>
        <td><%= link_to 'Destroy', house_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

