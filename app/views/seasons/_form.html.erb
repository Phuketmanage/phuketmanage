<%= form_with(model: season, local: true) do |form| %>
  <% if season.errors.any? %>
    <%= render 'shared/error_messages', object: form.object %>
  <% end %>

  <div class="form_row">
    <div class="form_group col-2">
      <%= form.label :ssd %>
      <%= form.number_field :ssd, class: 'form-control' %>
    </div>
  </div>

  <div class="form_row">
    <div class="form_group col-2">
      <%= form.label :ssm %>
      <%= form.number_field :ssm, class: 'form-control' %>
    </div>
  </div>

    <div class="form_row">
      <div class="form_group col-2">
      <%= form.label :sfd %>
      <%= form.number_field :sfd, class: 'form-control' %>
    </div>
  </div>

  <div class="form_row">
    <div class="form_group col-2">
      <%= form.label :sfm %>
      <%= form.number_field :sfm, class: 'form-control' %>
    </div>
  </div>

  <div class="form_row">
    <div class="form_group col-2">
    <%= form.label :house_id %>
    <%= form.select :house_id,
          @houses.all.map {|h| [h.title_en, h.id]},
                    { }, { class: "form-control" } %>
    </div>
  </div>
  <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
  </div>

<% end %>
